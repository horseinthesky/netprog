#jinja2: trim_blocks:True, lstrip_blocks:True
<config>
  <native xmlns="http://cisco.com/ns/yang/ned/ios">
    <hostname>{{ hostname }}</hostname>
    {% for user in users %}
    <username>
      <name>{{ user.name }}</name>
      <privilege>15</privilege>
      <password>
        <encryption>0</encryption>
        <password>{{ user.pass }}</password>
      </password>
    </username>
    {% endfor %}
    <ip>
      {% for vrf in vrfs %}
       <vrf>
        <name>{{ vrf.name }}</name>
        {% if vrf.rd is defined %}
        <rd>{{ vrf.rd }}</rd>
        <route-target>
          <direction>export</direction>
          <target>{{ vrf.rt}}</target>
        </route-target>
        <route-target>
          <direction>import</direction>
          <target>{{ vrf.rt }}</target>
        </route-target>
        {% endif %}
      </vrf>
      {% endfor %}
    </ip>
    <interface>
      {% for intf in clients %}
      <GigabitEthernet>
        <name>{{ intf.intf }}</name>
        <negotiation>
          <auto>true</auto>
        </negotiation>
        <ip>
          <vrf>
            <forwarding>
              <word>{{ intf.vrf }}</word>
            </forwarding>
          </vrf>
          <address>
            <primary>
              <address>{{ intf.ip }}</address>
              <mask>{{ intf.netmask }}</mask>
            </primary>
          </address>
        </ip>
        <mop>
          <enabled>false</enabled>
        </mop>
      </GigabitEthernet>
      {% endfor %}
      {% for intf in core %}
      <GigabitEthernet>
        <name>{{ intf.intf }}</name>
        <negotiation>
          <auto>true</auto>
        </negotiation>
        <ip>
          <address>
            <primary>
              <address>{{ intf.ip }}</address>
              <mask>{{ intf.netmask }}</mask>
            </primary>
          </address>
          <ospf>
            <process-id>
              <id>1</id>
              <area>0</area>
            </process-id>
          </ospf>
        </ip>
        <mop>
          <enabled>false</enabled>
        </mop>
      </GigabitEthernet>
      {% endfor %}
      <Loopback>
        <name>{{ lo.intf }}</name>
        <ip>
          <address>
            <primary>
              <address>{{ lo.ip }}</address>
              <mask>{{ lo.netmask }}</mask>
            </primary>
          </address>
          <ospf>
            <process-id>
              <id>1</id>
              <area>0</area>
            </process-id>
          </ospf>
        </ip>
      </Loopback>
    </interface>
    <mpls>
      <ldp>
        <router-id>
          <interface>Loopback0</interface>
          <force/>
        </router-id>
      </ldp>
    </mpls>
    <router>
      <bgp>
        <id>1</id>
        <bgp>
          <log-neighbor-changes/>
        </bgp>
        {% for peer in bgp %}
        <neighbor>
          <id>{{ peer.ip }}</id>
          <remote-as>{{ peer.as }}</remote-as>
          <update-source>
            <Loopback>0</Loopback>
          </update-source>
        </neighbor>
        {% endfor %}
        <address-family>
          <with-vrf>
            {% for vrf in vrfs if vrf.name != 'MGMT' %}
            <ipv4>
              <af-name>unicast</af-name>
              <vrf>
                <name>{{ vrf.name }}</name>
                <redistribute>
                  <connected></connected>
                </redistribute>
              </vrf>
            </ipv4>
            {% endfor %}
          </with-vrf>
          <no-vrf>
            <ipv4>
              <af-name>unicast</af-name>
            </ipv4>
            {% for peer in bgp %}
            <vpnv4>
              <af-name>unicast</af-name>
              <neighbor>
                <id>{{ peer.ip }}</id>
                <activate/>
                <next-hop-self/>
                <send-community>
                  <send-community-where>extended</send-community-where>
                </send-community>
              </neighbor>
            </vpnv4>
            {% endfor %}
          </no-vrf>
        </address-family>
      </bgp>
      <ospf>
        <id>1</id>
        <mpls>
          <ldp>
            <autoconfig></autoconfig>
          </ldp>
        </mpls>
      </ospf>
    </router>
  </native>
</config>
